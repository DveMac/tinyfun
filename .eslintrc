{
     "extends": [
        "plugin:flowtype/recommended"
    ],
	"rules": {
		"camelcase": 0,
		"curly": 0,
		"max-len": [
			2,
			120,
			4
		],
		"indent": [2, 4, {
			"SwitchCase": 1
		}],
		"no-underscore-dangle": 0,
		"no-unused-expressions": 0,
		"no-use-before-define": 0,
		"comma-dangle": ["error", "always-multiline"],
		"keyword-spacing": [2, {
			"after": true
		}],
		"max-depth": [1, 5],
		"no-unused-vars": "error",
		"complexity": [1, 20],
		"max-statements": [1, 30],
		"quotes": [2, "single"],
		"strict": [2, "never"],
		"semi": ["error", "never"],
		"no-unexpected-multiline": "error",
		"no-debugger": 2,
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": "error"
	},
	"ecmaFeatures": {
		"destructuring": true,
		"arrowFunctions": true,
		"blockBindings": true,
		"classes": true,
		"modules": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"parser": "babel-eslint",
	"plugins": [
		"react",
        "flowtype"
	]
}
